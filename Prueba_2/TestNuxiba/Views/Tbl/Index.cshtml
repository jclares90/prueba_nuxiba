@model List<TestNuxiba.Models.ViewModels.ListTblViewModel>
@{
    ViewBag.Title = "Test Nuxiba";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <p>
        @Html.ActionLink("Exportar CSV", "ExportToCSV")
    </p>
</div>
<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Tbl/Nuevo" class="btn btn-primary">Nuevo</a>
</div>
<div>
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Login</th>
                <th>Nombre</th>
                <th>Paterno</th>
                <th>Materno</th>
                <th>Operaciones</th>
            </tr>
            @foreach (var oElemento in Model)
            {
            <tr>
                <td>@oElemento.Login</td>
                <td>@oElemento.Nombre</td>
                <td>@oElemento.Paterno</td>
                <td>@oElemento.Materno</td>
                <td>
                    <a class="btn btn-danger" href="~/Tbl/Editar/@oElemento.userid">Moodificar Sueldo</a>
                </td>
            </tr>
            }
        </table>
    </div>


</div>